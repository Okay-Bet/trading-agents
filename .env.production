# Production Environment Variables for Railway

# ElizaOS Core (Set these in Railway dashboard)
# OPENAI_API_KEY=your_openai_api_key_here
# POLYMARKET_PRIVATE_KEY=your_polygon_private_key_here

# Database - Use relative path for Railway
PGLITE_DATA_DIR=./.eliza/.elizadb

# Polymarket
CLOB_API_URL=https://clob.polymarket.com/

# Trading Configuration
TRADING_ENABLED=true
MAX_POSITION_SIZE=100
MIN_CONFIDENCE_THRESHOLD=0.7

# Server Configuration for Railway
NODE_ENV=development
HOST=0.0.0.0

# Force enable web UI - try multiple flags
DISABLE_WEB_UI=false
ELIZA_WEB_UI_ENABLED=true
WEB_UI_ENABLED=true
ENABLE_WEB_UI=true

# Force ElizaOS to use our custom client
CLIENT_PATH=/app/dist/client
ELIZA_CLIENT_PATH=/app/dist/client
STATIC_PATH=/app/dist/client

# Disable server auth for now (Railway handles this)
ELIZA_SERVER_AUTH_TOKEN=