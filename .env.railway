# Railway Environment Variables Template
# Copy these to Railway dashboard

# Core AI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# Discord Bot Configuration (REQUIRED)
DISCORD_API_TOKEN=your_discord_bot_token_here

# Polymarket Trading Configuration (REQUIRED)
POLYMARKET_PRIVATE_KEY=your_polygon_private_key_here
CLOB_API_URL=https://clob.polymarket.com/
TRADING_ENABLED=true
MAX_POSITION_SIZE=100
MIN_CONFIDENCE_THRESHOLD=0.7

# Database Configuration
PGLITE_DATA_DIR=/app/.eliza/.elizadb

# Optional: Research & Analysis
TAVILY_API_KEY=your_tavily_api_key_here
NEWS_API_KEY=your_news_api_key_here

# System Configuration
NODE_ENV=production
PORT=3000
HEALTH_CHECK_PORT=3001
LOG_LEVEL=info
DISABLE_WEB_UI=true

# Trading Parameters (Optional)
SLIPPAGE_TOLERANCE=0.02
ORDER_TIMEOUT_MS=30000
MARKET_DATA_REFRESH_INTERVAL=43200000