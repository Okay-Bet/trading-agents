# Production Environment Variables for Pamela Trading Agent

# Core Configuration
NODE_ENV=production
PORT=3000

# Database (Railway provides DATABASE_URL automatically when you add Postgres)
# DATABASE_URL will be injected by Railway

# ElizaOS Core (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Polymarket Trading (Required)
POLYMARKET_PRIVATE_KEY=your_polygon_private_key_here
CLOB_API_URL=https://clob.polymarket.com/

# Trading Configuration
TRADING_ENABLED=true
MAX_POSITION_SIZE=100
MIN_CONFIDENCE_THRESHOLD=0.7

# Optional Integrations
# TAVILY_API_KEY=your_tavily_api_key
# NEWS_API_KEY=your_news_api_key
# TWITTER_USERNAME=your_twitter_username
# TWITTER_PASSWORD=your_twitter_password
# TWITTER_EMAIL=your_twitter_email
# DISCORD_BOT_TOKEN=your_discord_bot_token
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Frontend Configuration (for web service)
VITE_API_URL=https://your-agent-service.railway.app